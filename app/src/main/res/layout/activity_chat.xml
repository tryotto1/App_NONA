<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubTab_Tab1.ChatActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btn_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/chat_msg"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="채팅 보내기"
        android:id="@+id/btn_chat"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_chat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:id="@+id/chat_recycle"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="빌려받음"
        android:id="@+id/btn_borrow"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@id/btn_borrow"
        app:layout_constraintTop_toTopOf="parent"
        android:text="돌려받음"
        android:id="@+id/btn_give_back"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@id/btn_give_back"
        app:layout_constraintTop_toTopOf="parent"
        android:text="거래 신청"
        android:id="@+id/btn_dib"/>

</androidx.constraintlayout.widget.ConstraintLayout>